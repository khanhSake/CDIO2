@model GymBookingSystem.Dtos.RegisterDto
@{
    ViewData["Title"] = "Đăng ký";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GymBookingSystem</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/account.css" rel="stylesheet" />
</head>
<body>
    <div class="register-container">
        <div class="register-card">
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="Logo" class="register-logo" />
                <h2>Tạo tài khoản mới</h2>
                <p class="text-muted">Vui lòng điền thông tin bên dưới để đăng ký.</p>
            </div>

            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-controller="Account" asp-action="Register" method="post" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                

                <div class="form-floating mb-3">
                    <input asp-for="FullName" class="form-control" placeholder="Họ và tên" required />
                    <label asp-for="FullName">Họ và tên</label>
                    <span asp-validation-for="FullName" class="invalid-feedback"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Email"
                           class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")"
                           placeholder="name@example.com"
                           required />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" required minlength="6" />
                    <label asp-for="Password">Mật khẩu</label>
                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required />
                    <label asp-for="ConfirmPassword">Nhập lại mật khẩu</label>
                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100 py-2">Đăng ký</button>
            </form>

            <div class="mt-3 text-center">
                <a href="/Account/Login" class="text-decoration-none">Bạn đã có tài khoản? Đăng nhập</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/register.js"></script>
</body>
</html>
