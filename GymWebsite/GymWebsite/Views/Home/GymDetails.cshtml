@model GymWebsite.Models.Gym 

@{
    ViewBag.Title = "Thông tin phòng tập";
    Layout = "~/Views/Shared/_Layout.cshtml";  
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Ảnh phòng tập" />
            </div>
            <div class="col-md-6">
                <h2 class="mb-3">@Model.TenPhongTap</h2>
                <p><i class="fa fa-map-marker-alt text-danger"></i> <strong>ID:</strong> @Model.Id</p>
                <p><i class="fa fa-map-marker-alt text-danger"></i> <strong>Địa chỉ:</strong> @Model.DiaChi</p>
                <p><i class="fa fa-clock text-primary"></i> <strong>Giờ mở cửa:</strong> @Model.GioMoCua - @Model.GioDongCua</p>
                <p><i class="fa fa-phone text-success"></i> <strong>Liên hệ:</strong> @Model.SoDienThoai</p>
                <p><i class="fa fa-envelope text-info"></i> <strong>Email:</strong> @Model.Email</p>

                <hr />
                <h5>Tiện ích</h5>
                <ul class="list-unstyled">
                    @foreach (var item in Model.TienIch)
                    {
                        <li><i class="fa fa-check-circle text-success"></i> @item</li>
                    }
                </ul>

                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-3">
                    <i class="fa fa-arrow-left"></i> Quay lại
                </a>
                <a href="#" class="btn btn-primary mt-3">
                    <i class="fa fa-calendar-check"></i> Đăng ký ngay
                </a>
            </div>
        </div>
    </div>
</div>
