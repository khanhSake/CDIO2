@model GymWebsite.Models.Gym
@{
    ViewBag.Title = Model.TenPhongTap;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4 gym-detail-wrapper">
    <div class="d-flex justify-content-between align-items-center mb-4 detail-header-actions">
        <h1 class="detail-title">@Model.TenPhongTap</h1>
        <div class="actions">
            <a href="#" class="me-3"><i class="fa fa-heart fa-lg"></i></a>
            <a href="#" class="me-3"><i class="fa fa-share-alt fa-lg"></i></a>
            <a href="javascript:;" class="btn btn-primary">Đăng ký</a>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-lg-8 gallery-section">
            <div class="main-image rounded mb-2" style="background-image:url('@Url.Content(Model.ImageUrl)')"></div>
            <div class="thumbs d-flex gap-2">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="thumb rounded" style="background-image:url('@Url.Content(Model.ImageUrl)')"></div>
                }
                <div class="thumb more rounded">+@((Model.TienIch.Count>4)?Model.TienIch.Count-4:0)</div>
            </div>
        </div>
        <div class="col-lg-4 sidebar-section">
            <div class="rating-box mb-3">
                <h5>Đánh giá của khách</h5>
                <p><strong>4.5</strong> <i class="fa fa-star text-warning"></i></p>
                <a href="#reviews" class="small">Xem chi tiết đánh giá</a>
            </div>
            <div class="map-box">
                <h5>Vị trí</h5>
                <iframe src="https://www.google.com/maps?q=@Uri.EscapeDataString(Model.DiaChi)&output=embed" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-lg-8 intro-section">
            <h4>Giới thiệu</h4>
            <p class="text-truncate description" data-full="@Model.MoTaChiTiet">@Model.MoTaChiTiet</p>
            <a href="javascript:void(0)" class="btn btn-link p-0" id="show-more">Xem thêm</a>
        </div>
        <div class="col-lg-4 highlights-section">
            <div class="card p-3 mb-3">
                <h5>Điểm nổi bật</h5>
                <ul class="list-unstyled">
                    <li>Giờ mở cửa: @Model.GioMoCua</li>
                    <li>Giờ đóng cửa: @Model.GioDongCua</li>
                    <li>Tiện ích: @String.Join(", ", Model.TienIch.Take(3))...</li>
                </ul>
                <a href="javascript:;" class="btn btn-primary btn-block">Đặt ngay</a>
            </div>
        </div>
    </div>
    <div id="reviews" class="reviews-section mb-5">
        <h4>Đánh giá chi tiết</h4>
        <div class="criteria d-flex gap-4 mb-3">
            @foreach (var crit in new[] { "Thoải mái", "Wifi miễn phí", "Chi phí hợp lý", "PT" })
            {
                <div class="crit-item text-center">
                    <p>@crit</p>
                    <p><i class="fa fa-star text-warning"></i> 4.5</p>
                </div>
            }
        </div>
        <div class="comments mb-4">
            <div class="comment mb-3">
                <strong>Nguyễn A</strong> <span class="text-muted small">(05/04/2025)</span>
                <p>Phòng tập rất sạch và huấn luyện viên nhiệt tình!</p>
            </div>
        </div>
        <div class="add-comment">
            <h5>Thêm đánh giá của bạn</h5>
            <form>
                <div class="mb-2">
                    <textarea class="form-control" rows="3" placeholder="Viết bình luận..."></textarea>
                </div>
                <button type="submit" class="btn btn-outline-primary">Gửi đánh giá</button>
            </form>
        </div>
    </div>
</div>