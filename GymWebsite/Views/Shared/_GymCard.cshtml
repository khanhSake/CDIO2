@model GymWebsite.Models.Gym

<div class="gym-card" style="border: 1px solid #ccc; padding: 10px; margin: 10px; width: 300px;">
    <div class="gym-image" style="background-image: url('@Url.Content(Model.ImageUrl)'); height: 180px; background-size: cover; background-position: center;"></div>
    <h3>@Model.TenPhongTap</h3>
    <p>@Model.DiaChi</p>
    <a href="@Url.Action("Detail", "Gym", new { id = Model.Id })" class="btn btn-primary">Xem chi tiết</a>
</div>
